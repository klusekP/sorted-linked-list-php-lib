{
  "name": "klusekp/sortedlinkedlist",
  "description": "A sorted linked list implementation for PHP",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "SortedLinkedList\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SortedLinkedList\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.12",
    "symplify/easy-coding-standard": "^12.0",
    "infection/infection": "^0.29"
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "ecs": "ecs check",
    "ecs-fix": "ecs check --fix",
    "infection": "infection",
    "check": [
      "@ecs",
      "@phpstan",
      "@test",
      "@infection"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
